FROM mysql:8.0.33

ENV RESTORE_MYSQL_HOST=localhost
ENV RESTORE_MYSQL_PASSWORD=123456
ENV RESTORE_MYSQL_DB=test
ENV RESTORE_MYSQL_PORT=3306
ENV RESTORE_MYSQL_USERNAME=root

ENV BACKUP_MYSQL_HOST=localhost
ENV BACKUP_MYSQL_PASSWORD=123456
ENV BACKUP_MYSQL_DB=test
ENV BACKUP_MYSQL_PORT=3306
ENV BACKUP_MYSQL_USERNAME=root
ENV REMAIN_MINS=300

RUN mkdir /temp

COPY ./*.sh /app/

RUN chmod +x /app/*.sh

# ENTRYPOINT ["/app/restore.sh"]

CMD ["/app/restore.sh"]
